    @section Scripts{

        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">

            google.charts.load('current', { 'packages': ['corechart'] });
            google.charts.setOnLoadCallback(LoadData);

            function LoadData() {
                $(function () {
                    $.ajax({
                        type: "GET",
                        url: 'Admin/GetDrawPieChaert',
                        /*dataType: "json",*/
                        success: function (chartsdata) {

                            var Data = chartsdata.jsonList;
                            var data = new google.visualization.DataTable();
                            data.addColumn('string', 'Tariff');
                            data.addColumn('number', 'Count');

                            for (var i = 0; i < Data.length; i++) {
                                data.addRow([Data[i].tariff_name, Data[i].conunt_tariff]);
                            }

                            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
                            chart.draw(data, {
                                titleTextStyle: {
                                    color: 'red',
                                    fontName: 'TimesNewRoman',
                                    fontSize: 30
                                },
                                title: "Тарифы",
                                position: "top",
                                fontsize: "50px",
                                pieHole: 0.4,
                                is3D: true,
                                backgroundColor: 'transparent',
                                //backgroundColor: {
                                //    stroke: '#d1c5c5',
                                //    strokeWidth: 10
                                //},
                                colors: ['#191970', '#800000', '#00FF00', '#800080', '#FFA500'],
                                legend: {
                                    textStyle: {
                                        color: 'red',
                                        fontName: 'TimesNewRoman',
                                        fontSize: 15
                                    }
                                }

                            });

                        },
                        error: function () {
                            alert('Error loading data')
                        }
                    })
                });


            }

        </script>

        <script type="text/javascript">
            google.charts.load('current', { 'packages': ['corechart'] });
            google.charts.setOnLoadCallback(drawChart);

            function drawChart() {

                $(function () {
                    $.ajax({
                        type: "GET",
                        url: 'Admin/GetDrawLineChart',
                        /*dataType: "json",*/
                        success: function (chartsdata) {

                            var Data = chartsdata.jsonList;
                            var data = new google.visualization.DataTable();
                            data.addColumn('string', 'Date');
                            data.addColumn('number', 'Кол-во');

                            for (var i = 0; i < Data.length; i++) {
                                data.addRow([Data[i].date, Data[i].count]);
                            }




                            //var data = google.visualization.arrayToDataTable([
                            //    ['Year', 'Sales', 'Expenses'],
                            //    ['2004', 1000, 400],
                            //    ['2005', 1170, 460],
                            //    ['2006', 660, 1120],
                            //    ['2007', 1030, 540]
                            //]);



                            var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

                            chart.draw(data, {
                                title: 'Количесвто пользователей',
                                curveType: 'function',
                                legend: { position: 'bottom' },
                                colors: ['#191970', '#800000', '#00FF00', '#800080', '#FFA500']

                            });

                        },
                        error: function () {
                            alert('Error loading data')
                        }
                    })
                });



            }
        </script>
    }
